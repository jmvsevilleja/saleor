#!/usr/bin/env bash

FILE=${FILE:-""}
COMPOSE_FILE=docker-compose${FILE}.yml

docker-compose -f $COMPOSE_FILE stop

if [ -z "$1" ]; then
    docker-compose -f $COMPOSE_FILE up -d --build --remove-orphans
else
    component=$1
    docker-compose -f $COMPOSE_FILE build --no-cache --force-rm $component
    docker-compose -f $COMPOSE_FILE up -d --build --remove-orphans
fi
